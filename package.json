{
  "name": "@ckvv/lib",
  "private": false,
  "version": "0.0.1",
  "description": "一个轻量级的工具函数库",
  "sideEffects": false,
  "repository": "https://github.com/ckvv/lib",
  "author": "chenkai",
  "license": "MIT",
  "type": "module",
  "types": "",
  "main": "./esm/index.d.ts",
  "exports": {
    ".": "./esm/index.js",
    "./*": "./*"
  },
  "packageManager": "pnpm@7.13.5",
  "dependencies": {},
  "scripts": {
    "prepare": "husky install",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "release": "standard-version",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "build": "pnpm clear && pnpm run --filter \"./packages/*\" build",
    "clear": "pnpm run --filter \"./packages/*\" clear",
    "docs": "typedoc --options ./typedoc.json",
    "publish": "pnpm publish --filter \"./packages/*\""
  },
  "files": [
    "src",
    "esm"
  ],
  "devDependencies": {
    "husky": "^8.0.1",
    "standard-version": "^9.5.0",
    "lint-staged": "^13.0.3",
    "@antfu/eslint-config": "0.27.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4",
    "vitest": "0.24.3",
    "@vitest/coverage-c8": "0.24.3",
    "rimraf": "3.0.2",
    "typedoc": "0.23.18",
    "@types/node": "18.11.2",
    "@ckvv/browser": "workspace:*",
    "@ckvv/node": "workspace:*",
    "@ckvv/common": "workspace:*",
    "@ckvv/tsconfig": "workspace:*"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue}": [
      "eslint --fix"
    ]
  }
}
